{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "react-app/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/oauth/start",
        "function": {
          "functionId": "oauthStart",
          "region": "europe-west2"
        }
      },
      {
        "source": "/api/oauth/callback",
        "function": {
          "functionId": "oauthCallback",
          "region": "europe-west2"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/index.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache, no-store, must-revalidate"
          }
        ]
      }
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}